<div class="card" style="width: 18rem;">
  <%= image_tag @project.image_url, class: "card-img-top", alt: @project.title %>
  <div class="card-body">
    <% case @project.id %>
    <% when 1 %>
      <h5 class="card-title">Calendario de Marketing</h5>
    <% when 2 %>
      <h5 class="card-title">Cómo optimizar tu perfil de LinkedIn</h5>
    <% when 3 %>
      <h5 class="card-title">¿Cómo optimizar la Biografía de Instagram? + Checklist</h5>
    <% end %>
    <p class="card-text"><%= @project.description %></p>
    <%= link_to "Descargar", @project.download_url, class: "btn btn-primary", target: "_blank" %>
  </div>
</div>
